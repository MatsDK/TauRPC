{
  "name": "taurpc",
  "version": "1.2.2",
  "description": "",
  "main": "dist/index.cjs",
  "repository": {
    "url": "https://github.com/MatsDK/TauRPC",
    "type": "git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:format": "dprint check",
    "lint:types": "tsc",
    "lint:js": "eslint ."
  },
  "keywords": [],
  "author": "MatsDK",
  "license": "ISC",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@types/eslint": "^8.40.0",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "dprint": "^0.36.1",
    "eslint": "^8.41.0",
    "eslint-plugin-dprint": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.3.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "external": [
      ".taurpc"
    ],
    "splitting": true,
    "clean": true
  },
  "packageManager": "pnpm@8.5.0"
}
